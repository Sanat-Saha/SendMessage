<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sanatkumarsaha.sendmessage.Main_Screen"
    tools:showIn="@layout/app_bar_main__screen"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/main"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_red"
                android:clickable="true"
                android:layout_margin="10dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medical"
                    android:id="@+id/textView4"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/medical"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/ripple_effect"
                android:elevation="5dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Security"
                    android:id="@+id/textView5"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/imageView3"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/security"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="20dp" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_blue"
                android:clickable="true"
                android:layout_margin="10dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Emotion"
                    android:id="@+id/textView3"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/imageView4"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/emotion"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_black"
                android:clickable="true"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:id="@+id/custom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Custom"
                    android:id="@+id/textView1"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/imageView5"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/custom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="20dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e000000"
        android:id="@+id/floating"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Custom Entry"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:textColor="#171ac1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@android:drawable/ic_delete"
                    android:clickable="true"
                    android:onClick="close" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#000000" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Stress"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="#1d9a1d"
                android:layout_marginBottom="15dp" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="0"
                app:dsb_max="10"
                app:dsb_progressColor="#0dd4b0"
                app:dsb_rippleColor="#8302fe97"
                app:dsb_trackColor= "#979595"
                app:dsb_indicatorColor = "#0dd4b0"
                app:dsb_indicatorTextAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/stress"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Urgency"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="#1d9a1d"
                android:layout_marginBottom="15dp" />
            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="0"
                app:dsb_max="10"
                app:dsb_progressColor="#0dd4b0"
                app:dsb_rippleColor="#8302fe97"
                app:dsb_trackColor= "#979595"
                app:dsb_indicatorColor = "#0dd4b0"
                app:dsb_indicatorTextAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/urgency"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Type"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textColor="#1d9a1d"
                android:layout_marginBottom="15dp" />

            <com.rey.material.widget.Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="2.5dp">

            </com.rey.material.widget.Spinner>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/button"
                android:theme="@style/MyButtonGreen"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:onClick="submit" />
        </LinearLayout>

    </ScrollView>
    </RelativeLayout>

</RelativeLayout>
