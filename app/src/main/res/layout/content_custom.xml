<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sanatkumarsaha.sendmessage.Custom"
    tools:showIn="@layout/activity_custom"
    android:background="#f5f5f5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Stress"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal" />

            <com.rey.material.widget.Slider
                style="@style/Material.Widget.Slider"
                app:sl_thumbRadius="12dp"
                app:sl_stepValue="1"
                app:sl_discreteMode="true"
                app:sl_textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stress"
                app:sl_minValue="0"
                app:sl_maxValue="10"
                app:sl_value="0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:sl_primaryColor="@color/red"
                app:sl_secondaryColor="@color/blue"
                app:sl_textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Urgency"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp" />
            <com.rey.material.widget.Slider
                style="@style/Material.Widget.Slider"
                app:sl_thumbRadius="12dp"
                app:sl_stepValue="1"
                app:sl_discreteMode="true"
                app:sl_textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/urgency"
                app:sl_minValue="0"
                app:sl_maxValue="10"
                app:sl_value="0"
                app:sl_primaryColor="@color/red"
                app:sl_secondaryColor="@color/blue"
                app:sl_textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Type"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spin"
                android:layout_gravity="center_horizontal"
                android:background="#faffbd"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/button"
                android:theme="@style/MyButtonGreen"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="50dp"
                android:onClick="submit" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
